.i-load-more {
    font-size: 14px;
    line-height: 1.6em;
    margin: 0 auto;
    text-align: center;
    width: 65%;
}

.i-load-more-loading {
    animation: btn-spin .6s linear;
    animation-iteration-count: infinite;
    background: 0 0;
    border: 2px solid #e9eaec;
    border-left-color: #2d8cf0;
    border-radius: 50%;
    height: 14px;
    margin-right: 12px;
    width: 14px;
}

.i-load-more-loading,.i-load-more-tip {
    display: inline-block;
    vertical-align: middle;
}

.i-load-more-tip {
    color: #999;
}

.i-load-more-line {
    border-top: 0;
    display: flex;
}

.i-load-more-line::after,.i-load-more-line::before {
    -webkit-box-flex: 1;
    border-top: 1px solid #dddee1;
    content: "";
    flex: 1;
    position: relative;
    top: -1px;
}

.i-load-more-line .i-load-more-tip {
    padding: 0 .55em;
    position: relative;
    top: -.9em;
}

.i-load-more-empty {
    background-color: #e5e5e5;
    border-radius: 50%;
    display: inline-block;
    height: 4px;
    position: relative;
    top: -.16em;
    vertical-align: 0;
    width: 4px;
}

@-webkit-keyframes btn-spin {
    0% {
        transform: rotate(0);
    }

    100% {
        transform: rotate(1turn);
    }
}

@keyframes btn-spin {
    0% {
        transform: rotate(0);
    }

    100% {
        transform: rotate(1turn);
    }
}