.banner {
    height: 500rpx;
    overflow: hidden;
    position: relative;
    width: 750rpx;
}

.banner-bg {
    filter: blur(10px);
    height: 500rpx;
    transform: translate(-375rpx);
    width: 1500rpx;
}

.banner-mask {
    background: #000;
    height: 500rpx;
    left: 0;
    opacity: .3;
    position: absolute;
    top: 0;
    width: 750rpx;
}

.banner-title {
    height: 168rpx;
    left: 185rpx;
    position: absolute;
    top: 146rpx;
    width: 380rpx;
}

.top-main {
    background: #fff;
    border-top-left-radius: 40rpx;
    border-top-right-radius: 40rpx;
    margin-top: -40rpx;
    position: relative;
    width: 100%;
}

.nav {
    align-items: center;
    display: flex;
    height: 120rpx;
    justify-content: space-around;
}

.nav view {
    border-bottom: 10rpx solid #fff;
    color: #999;
    font-size: 32rpx;
    font-weight: 700;
    line-height: 24rpx;
}

.nav view.on {
    border-bottom: 10rpx solid #1dc4ab;
    color: #333;
}

.list {
    padding: 0 30rpx;
}

.item {
    display: flex;
    flex-wrap: wrap;
    margin-bottom: 30rpx;
}

.item-img {
    height: 220rpx;
    margin-right: 24rpx;
    position: relative;
    width: 246rpx;
}

.item-img-mask1 {
    background: hsla(0,0%,40%,.1);
    height: 180rpx;
    right: 0;
    top: 20rpx;
    width: 180rpx;
}

.item-img-mask1,.item-img-mask2 {
    border-radius: 10rpx;
    position: absolute;
}

.item-img-mask2 {
    background: hsla(0,0%,40%,.15);
    height: 200rpx;
    right: 10rpx;
    top: 10rpx;
    width: 200rpx;
}

.item-img image {
    background: #999;
    border-radius: 10rpx;
    height: 220rpx;
    left: 0;
    position: absolute;
    top: 0;
    width: 220rpx;
}

.item-name {
    color: #333;
    font-size: 34rpx;
    line-height: 50rpx;
}

.item-author,.item-name {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    width: 420rpx;
}

.item-author {
    color: #b5b5b5;
    font-size: 28rpx;
    line-height: 40rpx;
    margin-bottom: 10rpx;
}

.item-press {
    color: #d5bc8b;
    font-size: 24rpx;
    line-height: 30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    width: 420rpx;
}

.item-sales {
    align-items: center;
    display: flex;
    justify-content: space-between;
    margin-top: 40rpx;
}

.item-price {
    color: #ed5c3e;
    font-size: 36rpx;
    line-height: 50rpx;
}

.item-num {
    color: #b5b5b5;
    font-size: 28rpx;
    line-height: 50rpx;
}

.item-img2 {
    height: 180rpx;
    margin-left: 24rpx;
    width: 300rpx;
}

.item-img2,.item-img3 {
    background: #999;
    border-radius: 10rpx;
}

.item-img3 {
    height: 210rpx;
    width: 100%;
}

.item-info {
    align-items: center;
    border-bottom: 1px solid #e4e4e4;
    display: flex;
    height: 100rpx;
    justify-content: space-between;
    width: 100%;
}

.item-num2 {
    background: rgba(29,196,171,.1);
    border-radius: 6rpx;
    color: #1dc4ab;
    font-size: 24rpx;
    line-height: 40rpx;
    padding: 0 16rpx;
}