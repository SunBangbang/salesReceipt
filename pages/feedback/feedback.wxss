page {
    background: #f8f8f8;
    box-shadow: inset 0 2px 8px 0 hsla(0,0%,79%,.5);
    box-sizing: border-box;
    height: 100%;
    padding: 30rpx 30rpx 0;
}

.main {
    background: #fff;
    border-radius: 16rpx;
    box-shadow: 4px 4px 10px 0 hsla(0,0%,84%,.5);
    margin-bottom: 30rpx;
    padding: 0rpx 30rpx;
    width: 630rpx;
}

.type {
    color: #333;
    font-size: 28rpx;
    line-height: 100rpx;
    position: relative;
}

.type-arrow {
    height: 29rpx;
    position: absolute;
    right: 0;
    top: 35rpx;
    width: 16rpx;
}

.word-title {
    color: #333;
    font-size: 28rpx;
    line-height: 90rpx;
}

.word-main {
    padding-bottom: 50rpx;
    position: relative;
}

.word-main textarea {
    border: 1px solid #e4e4e4;
    border-radius: 4rpx;
    box-sizing: border-box;
    font-size: 24rpx;
    height: 180rpx;
    padding: 10rpx;
    width: 100%;
}

.word-length {
    bottom: 60rpx;
    line-height: 32rpx;
    position: absolute;
    right: 10rpx;
}

.add-btn,.word-length {
    color: #b5b5b5;
    font-size: 24rpx;
}

.add-btn {
    align-items: center;
    border: 1px dotted #e4e4e4;
    border-radius: 20rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    height: 165rpx;
    justify-content: center;
    width: 175rpx;
}

.icon-camera {
    height: 54rpx;
    margin-bottom: 10rpx;
    width: 60rpx;
}

.img-list {
    display: flex;
}

.img-item {
    margin-right: 35rpx;
    position: relative;
}

.img-item,.img-main {
    border-radius: 20rpx;
    height: 165rpx;
    width: 175rpx;
}

.img-close {
    height: 32rpx;
    position: absolute;
    right: -16rpx;
    top: -16rpx;
    width: 32rpx;
}

.submit-btn {
    background: #1dc4ab;
    border-radius: 70rpx;
    bottom: 60rpx;
    color: #fff;
    font-size: 36rpx;
    height: 70rpx;
    left: 30rpx;
    line-height: 70rpx;
    position: fixed;
    text-align: center;
    width: 690rpx;
}

.success-pop {
    align-items: center;
    background: #fff;
    border-radius: 40rpx;
    display: flex;
    flex-direction: column;
    left: 50%;
    position: fixed;
    top: 50%;
    transform: translateX(-50%) translateY(-50%);
    width: 400rpx;
    z-index: 300;
}

.success-tip {
    height: 213rpx;
    margin-top: -50rpx;
    width: 203rpx;
}

.deliver-tip {
    color: #999;
    font-size: 26rpx;
    padding: 20rpx 0;
}

.countdown-tip {
    align-items: center;
    color: #999;
    display: flex;
    font-size: 26rpx;
}

.deliver-btn {
    background: #1dc4ab;
    border-radius: 70rpx;
    color: #fff;
    font-size: 34rpx;
    height: 70rpx;
    line-height: 70rpx;
    margin: 30rpx 0 50rpx;
    text-align: center;
    width: 200rpx;
}