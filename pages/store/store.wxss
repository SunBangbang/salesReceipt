page {
    padding-bottom: 130rpx;
}

.loading {
    left: 0;
    position: fixed;
    top: 0;
    z-index: 1000;
}

.loading,.loading image {
    height: 100%;
    width: 100%;
}

.banner,.banner-img {
    height: 220rpx;
    width: 100%;
}

.banner-img {
    background: #f8f8f8;
    border-radius: 6rpx;
}

.notice {
    color: #333;
    font-size: 28rpx;
    justify-content: center;
    line-height: 100rpx;
}

.module,.notice {
    display: flex;
}

.module {
    justify-content: space-between;
}

.top {
    background: #348084;
    border-radius: 10rpx;
    height: 330rpx;
    width: 400rpx;
}

.top-title {
    background-image: linear-gradient(-35deg,#568f96 23%,#79a8ae 98%);
    border-top-left-radius: 10rpx;
    border-top-right-radius: 10rpx;
    height: 160rpx;
    position: relative;
    width: 100%;
}

.top-img {
    height: 110rpx;
    margin: 20rpx 0 0 30rpx;
    width: 185rpx;
}

.top1 {
    background: #333;
    bottom: 0;
    height: 120rpx;
    right: 50rpx;
    width: 100rpx;
    z-index: 300;
}

.top1,.top2 {
    border-radius: 4rpx;
    position: absolute;
}

.top2 {
    background: #666;
    bottom: 5rpx;
    height: 110rpx;
    right: 40rpx;
    width: 90rpx;
    z-index: 200;
}

.top3 {
    background: #999;
    border-radius: 4rpx;
    bottom: 10rpx;
    height: 100rpx;
    position: absolute;
    right: 30rpx;
    width: 80rpx;
    z-index: 100;
}

.top-list {
    display: flex;
    flex-direction: column;
    height: 122rpx;
    justify-content: space-between;
    padding: 24rpx 30rpx;
    position: relative;
}

.top-list-item {
    color: #fff;
    font-size: 24rpx;
    line-height: 32rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    width: 220rpx;
}

.top-list-more {
    border: 1px solid #fff;
    border-radius: 40rpx;
    bottom: 24rpx;
    color: #fff;
    font-size: 24rpx;
    height: 40rpx;
    line-height: 40rpx;
    position: absolute;
    right: 30rpx;
    text-align: center;
    width: 120rpx;
}

.btn {
    display: flex;
    flex-direction: column;
    height: 330rpx;
    justify-content: space-between;
    width: 270rpx;
}

.btn-item {
    height: 155rpx;
    width: 270rpx;
}

.type-box {
    background: #f8f8f8;
    margin-top: 40rpx;
    padding: 50rpx 30rpx;
}

.type {
    justify-content: space-between;
}

.type,.type-item {
    display: flex;
}

.type-item {
    align-items: center;
    color: #444;
    flex-direction: column;
    font-size: 24rpx;
}

.type-img {
    height: 42rpx;
    margin-bottom: 14rpx;
    width: 50rpx;
}

.list-title {
    align-items: center;
    background: #fff;
    display: flex;
    height: 100rpx;
    justify-content: space-between;
    padding: 0 30rpx;
    width: 690rpx;
}

.list-title-left {
    color: #333;
    font-family: PingFangSC-Semibold;
    font-size: 36rpx;
}

.list-title-right {
    color: #999;
    font-size: 28rpx;
}

.list {
    border-bottom: 20rpx solid #f8f8f8;
    padding: 0 30rpx;
}

.list-item {
    border-top: 1px solid #e4e4e4;
    display: flex;
    margin-left: 30rpx;
    padding: 30rpx 0;
    width: 690rpx;
}

.list-img {
    background: #999;
    border-radius: 6rpx;
    height: 260rpx;
    margin-right: 30rpx;
    width: 200rpx;
}

.list-info .name {
    color: #333;
    font-size: 34rpx;
    line-height: 48rpx;
}

.list-info .author,.list-info .name {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    width: 370rpx;
}

.list-info .author {
    color: #b5b5b5;
    font-size: 28rpx;
    line-height: 40rpx;
    margin: 10rpx 0;
}

.list-info .press {
    color: #d5bc8b;
    font-size: 24rpx;
    line-height: 32rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    width: 370rpx;
}

.list-info .price {
    align-items: center;
    display: flex;
    margin-top: 70rpx;
}

.list-info .money {
    color: #333;
    font-size: 36rpx;
    line-height: 50rpx;
    margin-right: 14rpx;
}

.list-info .discount {
    border: 1px solid #ffcabf;
    border-radius: 4rpx;
    color: #ed5c3e;
    font-size: 20rpx;
    height: 32rpx;
    line-height: 32rpx;
    text-align: center;
    width: 66rpx;
}

.list-btn {
    height: 60rpx;
    margin: 200rpx 0 0 30rpx;
    width: 60rpx;
}