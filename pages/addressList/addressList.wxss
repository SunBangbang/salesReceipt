page {
    background: #f8f8f8;
    box-shadow: inset 0 2px 8px 0 hsla(0,0%,79%,.5);
    height: 100%;
}

.list {
    padding: 30rpx 30rpx 200rpx;
}

.item,.list {
    box-sizing: border-box;
    width: 100%;
}

.item {
    background: #fff;
    border-radius: 16rpx;
    box-shadow: 4px 4px 10px 0 hsla(0,0%,84%,.5);
    margin-bottom: 30rpx;
    padding: 20rpx;
}

.item-row {
    align-items: center;
    display: flex;
    justify-content: space-between;
    margin-bottom: 10rpx;
}

.name {
    color: #333;
    font-size: 30rpx;
}

.phone {
    color: #333;
    font-size: 28rpx;
}

.address {
    border-bottom: 1px solid #e4e4e4;
    color: #888;
    font-size: 26rpx;
    margin-bottom: 20rpx;
    padding-bottom: 10rpx;
}

.default,.default-item {
    align-items: center;
    color: #333;
    display: flex;
    font-size: 26rpx;
}

.default image {
    height: 32rpx;
    margin-right: 10rpx;
    width: 32rpx;
}

.save-btn {
    background: #1dc4ab;
    border-radius: 70rpx;
    bottom: 100rpx;
    color: #fff;
    font-size: 34rpx;
    height: 70rpx;
    left: 30rpx;
    line-height: 70rpx;
    position: fixed;
    text-align: center;
    width: 690rpx;
}

.pop {
    background: #fff;
    border-radius: 8rpx;
    left: 50%;
    position: fixed;
    top: 50%;
    transform: translateX(-50%) translateY(-50%);
    width: 560rpx;
    z-index: 300;
}

.pop-tip {
    border-bottom: 1px solid #e5e5e5;
    color: #000;
    font-size: 36rpx;
    line-height: 190rpx;
    text-align: center;
}

.pop-btn {
    display: flex;
    height: 100rpx;
    width: 100%;
}

.pop-btn view {
    box-sizing: border-box;
    color: #000;
    font-size: 36rpx;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    width: 50%;
}

.confirm-btn {
    border-left: 1px solid #e5e5e5;
    color: #1dc4ab!important;
}