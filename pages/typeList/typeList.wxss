.banner {
    position: relative;
}

.banner,.banner image {
    height: 320rpx;
    width: 100%;
}

.banner view {
    bottom: 60rpx;
    color: #fff;
    font-size: 36rpx;
    font-weight: 700;
    left: 30rpx;
    position: absolute;
}

.list-main {
    background: #fff;
    border-top-left-radius: 40rpx;
    border-top-right-radius: 40rpx;
    box-sizing: border-box;
    margin-top: -40rpx;
    padding: 0 30rpx;
    position: relative;
    width: 100%;
}

.list-nav {
    display: flex;
    padding: 10rpx 0;
}