.search-box {
    border-bottom: 1px solid #e4e4e4;
    justify-content: space-between;
    padding: 0 30rpx 20rpx;
}

.search-box,.search-left {
    align-items: center;
    display: flex;
}

.search-left {
    background: #f8f8f8;
    border-radius: 6rpx;
    height: 60rpx;
    width: 610rpx;
}

.search-icon {
    height: 24rpx;
    margin: 0 12rpx 0 20rpx;
    width: 24rpx;
}

.search-input {
    color: #333;
    font-size: 24rpx;
    margin-right: 12rpx;
    width: 490rpx;
}

.search-tip {
    color: #9a9a9a;
    font-size: 24rpx;
}

.search-cancel {
    height: 32rpx;
    width: 32rpx;
}

.search-right {
    color: #1dc4ab;
    font-size: 30rpx;
}

.search-right,.search-title {
    font-family: PingFangSC-Medium;
}

.search-title {
    align-items: center;
    color: #333;
    display: flex;
    font-size: 32rpx;
    justify-content: space-between;
    line-height: 44rpx;
    margin-top: 40rpx;
    padding: 0 30rpx;
}

.search-title image {
    height: 32rpx;
    width: 32rpx;
}

.search-key {
    display: flex;
    flex-wrap: wrap;
    margin-left: 30rpx;
}

.key-item {
    background: #f5f5f5;
    border-radius: 60rpx;
    color: #999;
    font-size: 28rpx;
    line-height: 40rpx;
    margin: 20rpx 30rpx 0 0;
    padding: 6rpx 24rpx;
}

.relevant-list {
    padding: 0 30rpx;
}

.relevant-item {
    border-bottom: 1px solid #e4e4e4;
    color: #999;
    font-size: 28rpx;
    line-height: 80rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    width: 690rpx;
}

.search-main {
    padding: 0 30rpx;
}