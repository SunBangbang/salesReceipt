page {
    background: #f8f8f8;
    padding-bottom: 230rpx;
}

.banner {
    align-items: center;
    background: #fff;
    border-bottom: 1px solid #e4e4e4;
    border-top: 1px solid #e4e4e4;
    height: 400rpx;
    width: 750rpx;
}

.banner,.banner-item {
    display: flex;
    justify-content: center;
}

.banner-img {
    background: #999;
    height: 320rpx;
    margin-top: 30rpx;
    width: 320rpx;
}

.sales {
    align-items: center;
    background: #eee;
    border-radius: 6rpx;
    box-sizing: border-box;
    color: #333;
    display: flex;
    font-size: 28rpx;
    height: 60rpx;
    justify-content: space-between;
    margin-bottom: 20rpx;
    padding: 0 20rpx;
    width: 100%;
}

.sales text {
    color: #ed5c3e;
}

.share-btn {
    border: none!important;
    display: flex;
    margin: 0;
    padding: 0;
}

.share-btn,.share-btn image {
    height: 32rpx;
    width: 32rpx;
}

.name {
    color: #333;
    font-size: 36rpx;
    line-height: 50rpx;
    margin-bottom: 10rpx;
}

.price {
    align-items: center;
    display: flex;
}

.money {
    color: #333;
    font-size: 36rpx;
    line-height: 50rpx;
    margin-right: 30rpx;
}

.discount {
    border: 1px solid #ffcabf;
    border-radius: 4rpx;
    color: #ed5c3e;
    font-size: 20rpx;
    height: 32rpx;
    line-height: 32rpx;
    padding: 0 10rpx;
    text-align: center;
}

.info {
    border-bottom: 1px solid #e4e4e4;
    border-top: 1px solid #e4e4e4;
    color: #b5b5b5;
    font-size: 24rpx;
    line-height: 40rpx;
    margin-top: 20rpx;
    padding: 20rpx 0;
}

.info text,.service {
    color: #333;
}

.service {
    align-items: center;
    display: flex;
    font-size: 30rpx;
    height: 80rpx;
}

.service-prise {
    height: 36rpx;
    margin-right: 14rpx;
    width: 36rpx;
}

.service-arrow {
    height: 20rpx;
    width: 12rpx;
}

.ad-banner {
    align-items: center;
    box-shadow: 4px 4px 10px 0 hsla(0,0%,84%,.5);
    display: flex;
    justify-content: center;
    margin: 30rpx 24rpx;
}

.ad-banner,.ad-banner image {
    border-radius: 16rpx;
    height: 200rpx;
    width: 690rpx;
}

.detail {
    background: #fff;
    margin-top: 24rpx;
}

.detail-title {
    border-bottom: 1px solid #e4e4e4;
    color: #333;
    font-family: PingFangSC-Medium;
    font-size: 34rpx;
    line-height: 90rpx;
    padding: 0 30rpx;
}

.detail-main {
    color: #333;
    font-size: 24rpx;
    height: 230rpx;
    line-height: 32rpx;
    margin: 20rpx 0 10rpx;
    overflow: hidden;
    padding: 0 30rpx;
    word-break: break-all;
}

.detail-more {
    align-items: center;
    color: #999;
    display: flex;
    font-size: 28rpx;
    justify-content: center;
    line-height: 40rpx;
    padding-bottom: 20rpx;
}

.detail-more image {
    height: 32rpx;
    width: 32rpx;
}

.about-title {
    color: #333;
    font-family: PingFangSC-Medium;
    font-size: 34rpx;
    padding: 30rpx 0 24rpx 30rpx;
}

.about-list {
    flex-wrap: wrap;
    padding: 0 30rpx;
}

.about-list,.book-footer {
    display: flex;
    justify-content: space-between;
}

.book-footer {
    align-items: center;
    background: #fff;
    bottom: 0;
    box-sizing: border-box;
    height: 150rpx;
    left: 0;
    padding: 40rpx;
    position: fixed;
    width: 100%;
}

.book-footer image {
    height: 40rpx;
    width: 40rpx;
}

.book-footer-btn {
    background: #1dc4ab;
    border-radius: 70rpx;
    color: #fff;
    font-size: 34rpx;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    width: 454rpx;
}

.book-footer-empty-btn {
    background: #999;
}

.service-pop {
    background: #fff;
    bottom: 0;
    left: 0;
    padding-bottom: 100rpx;
    position: fixed;
    width: 100%;
    z-index: 1000;
}

.service-pop-title {
    color: #333;
    font-family: PingFangSC-Medium;
    font-size: 34rpx;
    line-height: 120rpx;
    text-align: center;
}

.service-pop-subtitle {
    align-items: center;
    color: #333;
    display: flex;
    font-size: 28rpx;
    padding: 0 0 10rpx 30rpx;
}

.service-pop-subtitle image {
    height: 36rpx;
    margin-right: 10rpx;
    width: 36rpx;
}

.service-pop-desc {
    color: #666;
    font-size: 24rpx;
    margin-bottom: 50rpx;
    padding-left: 76rpx;
}

.service-pop-btn {
    background: #1dc4ab;
    border-radius: 70rpx;
    color: #fff;
    font-size: 34rpx;
    height: 70rpx;
    line-height: 70rpx;
    margin-left: 30rpx;
    text-align: center;
    width: 690rpx;
}

.cart-pop {
    background: #fff;
    bottom: 0;
    box-sizing: border-box;
    left: 0;
    padding: 30rpx 30rpx 100rpx;
    position: fixed;
    width: 100%;
    z-index: 1000;
}

.cart-pop-info {
    display: flex;
}

.cart-pop-img {
    border: 1px solid #e4e4e4;
    box-sizing: border-box;
    height: 240rpx;
    margin-right: 10rpx;
    width: 230rpx;
}

.cart-pop-price {
    color: #ed5c3e;
    font-size: 36rpx;
    line-height: 40rpx;
    width: 410rpx;
}

.cart-pop-close {
    height: 40rpx;
    width: 40rpx;
}

.cart-pop-service {
    background: #eee;
    border-radius: 6rpx;
    box-sizing: border-box;
    height: 50rpx;
    justify-content: space-between;
    margin: 24rpx 0;
    padding: 0 20rpx 0 16rpx;
    width: 100%;
}

.cart-pop-service,.cart-pop-service-left {
    align-items: center;
    display: flex;
}

.cart-pop-service-left {
    color: #666;
    font-size: 24rpx;
}

.cart-pop-service-left image {
    height: 32rpx;
    margin-right: 10rpx;
    width: 28rpx;
}

.cart-pop-service-right {
    color: #999;
    font-size: 24rpx;
}

.cart-pop-level {
    border-bottom: 1px solid #e4e4e4;
    border-top: 1px solid #e4e4e4;
    padding: 30rpx 0;
}

.cart-pop-level-title {
    color: #333;
    font-size: 30rpx;
    justify-content: space-between;
    line-height: 40rpx;
    margin-bottom: 20rpx;
}

.cart-pop-level-title,.cart-pop-level-title-right {
    align-items: center;
    display: flex;
}

.cart-pop-level-title-right {
    color: #999;
    font-size: 24rpx;
}

.cart-pop-level-title-right image {
    height: 20rpx;
    margin-left: 10rpx;
    width: 12rpx;
}

.cart-pop-level-btn {
    display: flex;
}

.cart-pop-level-btn view {
    background: #f5f5f5;
    border-radius: 50rpx;
    color: #333;
    font-size: 28rpx;
    height: 50rpx;
    line-height: 50rpx;
    margin-right: 30rpx;
    text-align: center;
    width: 110rpx;
}

.cart-pop-level-btn view.on {
    background: #1dc4ab;
    color: #fff;
}

.cart-pop-num {
    align-items: center;
    border-bottom: 1px solid #e4e4e4;
    display: flex;
    justify-content: space-between;
    padding: 40rpx 0;
}

.cart-pop-num-left {
    color: #333;
    font-size: 30rpx;
    line-height: 40rpx;
}

.cart-pop-num-left text {
    color: #999;
    font-size: 24rpx;
    margin-left: 16rpx;
}

.cart-pop-btn {
    background: #1dc4ab;
    border-radius: 70rpx;
    color: #fff;
    font-size: 34rpx;
    height: 70rpx;
    line-height: 70rpx;
    margin-top: 40rpx;
    text-align: center;
    width: 690rpx;
}

.cart-pop-empty-btn {
    background: #999;
}

.lin-enter-active-class,.lin-leave-active-class {
    bottom: 0;
}

.lin-enter-class,.lin-leave-to-class {
    bottom: -100%;
}