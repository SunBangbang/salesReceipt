page {
    background: #f5f5f5;
}

.nav {
    background: #fff;
    border-top: 1px solid #e4e4e4;
    box-shadow: 0 2px 8px 0 hsla(0,0%,79%,.5);
    color: #333;
    display: flex;
    font-size: 28rpx;
    height: 66rpx;
    justify-content: space-around;
    line-height: 62rpx;
    width: 100%;
}

.on {
    border-bottom: 4rpx solid #1dc4ab;
    color: #1dc4ab;
}

.log-list {
    background: #fff;
    border-radius: 16rpx;
    box-shadow: 4px 4px 10px 0 hsla(0,0%,84%,.5);
    margin: 30rpx;
    padding: 0 30rpx;
    width: 630rpx;
}

.log-item {
    align-items: center;
    border-top: 1px solid #e4e4e4;
    display: flex;
    height: 130rpx;
    justify-content: space-between;
}

.type {
    color: #333;
    font-size: 28rpx;
}

.time {
    color: #b5b5b5;
    font-size: 24rpx;
}

.money {
    color: #ed5c3e;
    font-family: PingFangSC-Medium;
    font-size: 28rpx;
}

.empty-tip {
    color: #727272;
    font-size: 30rpx;
    text-align: center;
}

.empty-img {
    height: 240rpx;
    margin: 450rpx 0 80rpx;
    width: 400rpx;
}