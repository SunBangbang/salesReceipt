.l-sticky-item {
    display: flex;
    flex-direction: column;
}

.l-sticky-wrapper {
    overflow: visible;
}

.l-sticky-item-header {
    width: 100%;
}

.l-sticky-item-header-fixed {
    position: fixed;
    top: 0;
}

@supports ((position:-webkit-sticky) or (position:sticky)) {
    .l-sticky-item-header-sticky {
        position: sticky;
    }
}