.step {
    display: flex;
    position: relative;
}

.step-custom {
    z-index: 2;
}

.step-row {
    align-items: center;
    flex-direction: column;
}

.step-column {
    box-sizing: border-box;
    flex-direction: row;
    padding-left: 30rpx;
}

.step-container {
    align-items: center;
    background-color: #fff;
    display: flex;
    justify-content: center;
    z-index: 2;
}

.step-container-row {
    height: 40rpx;
    width: 70rpx;
}

.step-container-column {
    height: 60rpx;
    width: 40rpx;
}

.step-icon {
    align-items: center;
    box-sizing: border-box;
    display: flex;
    font-size: 22rpx;
    height: 40rpx;
    justify-content: center;
    transition: .5s;
    width: 40rpx;
}

.step-process {
    background-color: #1dc4ab;
    border-radius: 50%;
    color: #fff;
}

.step-error {
    background-color: #fff;
    border: 1px solid #f4516c;
    border-radius: 50%;
    color: #f4516c;
}

.step-finish {
    background-color: #fff;
    border: 1px solid #1dc4ab;
    border-radius: 50%;
    color: #1dc4ab;
}

.step-wait {
    background-color: #fff;
    border: 1px solid #c4c9d2;
    border-radius: 50%;
    color: #fff;
}

.step-dot {
    border-radius: 50%;
    height: 24rpx;
    transition: .5s;
    width: 24rpx;
}

.step-dot-process {
    background-color: #1dc4ab;
}

.step-dot-wait {
    background-color: #c4c9d2;
}

.step-dot-error {
    background-color: #f4516c;
}

.step-dot-finish {
    background-color: #1dc4ab;
}

.step-line {
    background: #c4c9d2;
    position: absolute;
    transition: .5s;
    z-index: 0;
}

.step-line-row {
    height: 2rpx;
    left: 50%;
    top: 18rpx;
    width: 100%;
}

.step-line-column {
    height: 100%;
    left: 48rpx;
    top: 20rpx;
    width: 2rpx;
}

.step-line-wait {
    background-color: #e8e8e8;
}

.step-line-finish {
    background-color: #1dc4ab;
}

.step-content {
    display: flex;
    flex-direction: column;
}

.step-content-row {
    align-items: center;
    width: 100%;
}

.step-content-column {
    margin-left: 15rpx;
}

.step-title {
    color: #595959;
    font-size: 26rpx;
}

.step-title,.step-title-process {
    line-height: 40rpx;
    margin: 10rpx 0;
}

.step-title-process {
    color: #333;
    font-size: 28rpx;
}

.step-describe {
    color: #8c98ae;
    font-size: 22rpx;
}

@font-face {
    font-family:iconfont;src:url("data:application/x-font-woff2;charset=utf-8;base64,") format("woff2");
}

.iconfont {
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    font-family: iconfont!important;
    font-size: 24rpx;
    font-style: normal;
}

.icon-finish:before {
    content: "\e600";
}

.icon-error:before {
    content: "\e6cf";
}