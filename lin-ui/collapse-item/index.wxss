.container {
    box-sizing: border-box;
    flex-direction: column;
    width: 100%;
}

.container,.container-title {
    display: flex;
}

.container-title {
    align-items: center;
    color: #333;
    font-size: 28rpx;
    justify-content: space-between;
    padding: 20rpx 0;
}

.container-title-l-icon {
    transition: .3s;
}

.container-body {
    box-sizing: border-box;
    color: #888;
    font-size: 24rpx;
    overflow: hidden;
    transition: height .3s ease-in-out;
    width: 100%;
}

.container-body-wrapper {
    background: #f5f5f5;
    padding: 10rpx 20rpx;
    position: relative;
}